
<div class="container">
    <h2>Product Details</h2>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">ID: @Model.Id</h4>
            <h4 class="card-title">Name: @Model.Name</h4>
           
            <h4 class="card-title">Image: @Model.image</h4>
            
        </div>
    </div>

    <form asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post" class="mt-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary" style="background-color:darkgray">Cancel</a>
    </form>
</div>
